<!-- フラッシュメッセージ表示 -->
<div>
  <%= flash[:notice] %>
</div>

<h1>編集画面</h1>
<% if @book.errors.any? %>
  <div id="error">
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>
  <div class="update_book">
    <%= f.submit 'Update Book' %>
  </div>
  <!-- "show" リンクと "back" リンクを横並びに配置 -->
  <%= link_to "show", show_book_path(@book.id) %> |
  <%= link_to "back", "/books" %>

<% end %>
